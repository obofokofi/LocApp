@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Districts" asp-action="SeeDistrict" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Home" asp-action="Index" asp-route="" })>
                @*@asp-route-returnUrl="@Url.Action("Index", "Home"})">*@
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Register" asp-action="UserRegister">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Register" asp-action="UserLogin">Login</a>
        </li>
    }
</ul>
